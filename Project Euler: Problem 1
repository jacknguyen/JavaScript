var multOfThreeAndFive = [];
var total = 0;

for (var i=0;i<1000;i++){
    if (i%3 === 0){
    multOfThreeAndFive.push(i);
    }else if (i%5 === 0){
    multOfThreeAndFive.push(i);
    }
}

for (var x in multOfThreeAndFive){
    total+=multOfThreeAndFive[x];
}

console.log("The sum of all the multiples of 3 or 5 below 1000 is " + total);
